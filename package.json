{
  "name": "threejs-app",
  "version": "1.0.0",
  "description": "My Three.js sandbox",
  "main": "src/index.js",
  "scripts": {
    // start the dev server
    "dev": "webpack serve --config webpack.config.js --mode development",
    // build a production bundle in /dist
    "build": "webpack --config webpack.config.js --mode production",
    // serve the built files (install serve as a dev-dep)
    "start": "serve -s dist"
  },
  "dependencies": {
    "three": "^0.154.0"
  },
  "devDependencies": {
    "webpack": "^5.80.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.0",
    "html-webpack-plugin": "^5.5.0",
    "serve": "^14.2.0"
  }
}
